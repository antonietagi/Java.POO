        Empregado e1 = new Empregado();
        e1.setCode(1232);
        System.out.println("Código: " + e1.getCode());

        e1.setName("Paulo Silva");
        System.out.println("Nome: " + e1.getName());

        e1.setCarg("Gerente Financeiro");
        System.out.println("Cargo:" + e1.getCarg());

        e1.setSal(15400.00);
        System.out.println("Salário: "+ e1.getSal());

        //atividade 2b
