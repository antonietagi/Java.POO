        e2.setCode(4567);
        System.out.println("Código: " + e2.getCode());

        e2.setName("Ana Paula");
        System.out.println("Nome: " + e2.getName());

        e2.setCarg("Analista de Sistemas Senior");
        System.out.println("Cargo: " + e2.getCarg());

