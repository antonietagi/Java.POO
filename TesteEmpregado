        System.out.println("Saldo: " + e2.getSal());
        //atividade 2
        // Imprimindo as informações de cada empregado

        System.out.println("Informações do Empregado 1:");
        e1.imprimeEmpregado();

        System.out.println("\nInformações do Empregado 2:");
        e2.imprimeEmpregado();

