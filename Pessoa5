//Escrever a classe Pessoa encapsulada contendo nome e idade,
construtor (nome e idade) e com o m√©todo Imprime que
imprime na Console os dados da Pessoa.

public class Pessoa {
 private String nome;
 private int idade;
 
 public Pessoa (String nome, int idade) {
  this.nome = nome;
  this.idade = idade;
 }
 
 public String getNome() {
  return nome;
 }
 public void setNome(String nome) {
  this.nome = nome;
 }
 
 public int getIdade() {
  return idade;
 }
 public void setIdade(int idade) {
  this.idade = idade;
 }
 
 public void imprimePessoa() {
  System.out.println("Nome: " + nome);
  System.out.println("Idade: " + idade);
 }
 
 public static void main(String[] args) {
  Pessoa a1 = new Pessoa ("Giovanna", 20);
  
  a1.imprimePessoa();
 }
}

